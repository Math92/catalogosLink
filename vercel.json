{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { 
          "key": "Cache-Control", 
          "value": "public, max-age=31536000, immutable" 
        },
        { 
          "key": "Content-Security-Policy",
          "value": "default-src 'self' *.firebaseio.com *.firebasestorage.app; img-src 'self' data: https: *.amazonaws.com *.cloudfront.net;"
        }
      ]
    }
  ]
}